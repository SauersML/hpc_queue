# Cloudflare account + queue
CF_ACCOUNT_ID=your_account_id
CF_JOBS_QUEUE_ID=your_hpc_jobs_queue_id
CF_RESULTS_QUEUE_ID=your_hpc_results_queue_id
CF_QUEUES_API_TOKEN=your_api_token_with_queues_read_and_queues_write

# HPC consumer tuning
BATCH_SIZE=5
VISIBILITY_TIMEOUT_MS=120000
POLL_INTERVAL_SECONDS=2
RETRY_DELAY_SECONDS=30
RESULTS_DIR=./hpc-consumer/results

# Direct compute execution with Apptainer
APPTAINER_IMAGE=/opt/containers/your-image.sif
APPTAINER_OCI_REF=ghcr.io/your-org/hpc-queue-runtime:latest
APPTAINER_BIN=apptainer
APPTAINER_BIND=/scratch:/scratch
CONTAINER_CMD=python /app/run.py

# Laptop result consumer tuning
RESULTS_BATCH_SIZE=10
RESULTS_VISIBILITY_TIMEOUT_MS=120000
RESULTS_POLL_INTERVAL_SECONDS=2

# Producer Worker auth (required)
API_KEY=replace_me
